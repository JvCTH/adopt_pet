<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vistaUsuario.mascotaDetalleActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_700"
            android:gravity="center_horizontal"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Detalle de Mascota"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <ImageView
                android:id="@+id/image_mascota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/estadoT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_mascota"
                android:background="#36B63B"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TableLayout
                android:id="@+id/table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/estadoT"
                android:layout_margin="10dp"
                android:stretchColumns="1">

                <TableRow>

                    <TextView
                        android:layout_column="0"
                        android:layout_margin="5dp"
                        android:padding="3dip"
                        android:text="Nombre:"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/nameT"
                        android:layout_margin="5dp"
                        android:padding="3dip"
                        android:textColor="@color/app_color"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_column="0"
                        android:layout_margin="5dp"
                        android:padding="3dip"
                        android:text="Raza:"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/razaT"
                        android:layout_margin="5dp"
                        android:padding="3dip"
                        android:textColor="@color/app_color"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_column="0"
                        android:layout_margin="5dp"
                        android:padding="3dip"
                        android:text="Tipo:"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tipoT"
                        android:layout_margin="5dp"
                        android:padding="3dip"
                        android:textColor="@color/app_color"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_column="0"
                        android:layout_margin="5dp"
                        android:padding="3dip"
                        android:text="Edad:"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/edadT"
                        android:layout_margin="5dp"
                        android:padding="3dip"
                        android:textColor="@color/app_color"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_column="0"
                        android:layout_margin="5dp"
                        android:padding="3dip"
                        android:text="Fecha:"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/fechaT"
                        android:layout_margin="5dp"
                        android:padding="3dip"
                        android:textColor="@color/app_color"
                        android:textSize="18sp" />
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:id="@+id/sms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/table"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/whatsapp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/whatsapp" />

                <ImageView
                    android:id="@+id/llamada"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/llamada" />

            </LinearLayout>

            <TextView
                android:id="@+id/descripcionT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sms"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:padding="15dp"
                android:textColor="#181918"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/mensajeEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/descripcionT"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="En proceso de adopci칩n, sigue buscando a ese compa침ero que alegrara tu vida"
                android:textColor="#2689F1"
                android:visibility="gone" />

            <TextView
                android:id="@+id/mensajeEstadoPen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/descripcionT"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Tu solicitud de adopci칩n esta en proceso"
                android:textColor="@color/app_color"
                android:visibility="gone" />

            <Button
                android:id="@+id/sendSolicitud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/descripcionT"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="Enviar solicitud de adopci칩n"
                android:textColor="@color/white" />

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>